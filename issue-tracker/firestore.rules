rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the issues collection for any authenticated user.
    match /issues/{issueId} {
      allow read, write: if request.auth != null;
    }
    // Allow read/write access to issue activities for any authenticated user.
    match /issues/{issueId}/activities/{activityId} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the counters collection for any authenticated user.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
